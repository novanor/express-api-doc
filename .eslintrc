extends:
  eslint-config-airbnb-base

# parser:
#   babel-eslint

settings:
  ecmascript: 6

# ecmaFeatures:
#   modules: true
#   destructuring: true
#   classes: true
#   forOf: true
#   blockBindings: true
#   arrowFunctions: true

env:
  browser: true

rules:
  arrow-body-style: 0
  arrow-parens: 0
  class-methods-use-this: 0
  func-names: 0
  indent: [2, 4, {"SwitchCase": 1}]
  new-cap: 0
  radix: [1, "as-needed"]
  no-bitwise: 0
  no-mixed-operators: 0
  no-plusplus: 0
  no-return-assign: 0
  no-throw-literal: 0
  no-console: ["warn", { allow: ["warn", "error", "info"] }]
  quote-props: 0
  template-curly-spacing: [1, "never"]
  object-curly-spacing: [1, "never"]
  comma-dangle: [2, "always-multiline"]
  import/no-unresolved: 0
  import/no-extraneous-dependencies: 0
